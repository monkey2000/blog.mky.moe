<div class="pager">
    <% if (page.prev) { %>
    <a class="prev" href="<%- url_for(page.prev_link) %>"><span class="page-arrow">← </span>Prev</a>
    <% } %>
    <% if (page.next) { %>
    <a class="next" href="<%- url_for(page.next_link) %>">Next<span class="page-arrow"> →</span></a>
    <% } %>
</div>
